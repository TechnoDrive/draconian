import standard.io as io;

fun collatz(n: number): number {
    let count = 0;
    
    while (n != 1) {
        if (n % 2 == 0) {                                      
            n = n / 2; 
        } else {
            n = n * 3 + 1;
        }
        
        count++;
    }
    
    return count;
}

io.print(collatz(Number.parse(io.readLine())));


